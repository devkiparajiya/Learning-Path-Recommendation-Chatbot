import re
import random

rules = [
    
    {
        "intent": "greeting",
        "pattern": r"\b(hi|hello|hey|hii)\b",
        "responses": [
            "Hello! What do you want to learn?",
            "Hi there! Tell me your learning interest.",
            "Hey! I can suggest a learning path for you."
        ]
    },

    {
        "intent": "about",
        "pattern": r"\b(who are you|what are you|about you|your purpose)\b",
        "responses": [
            "I am a Learning Path Recommendation Bot.",
            "I help users choose a learning roadmap based on interest.",
            "I'm a rule-based chatbot built using Python and regex."
        ]
    },

    {
        "intent": "python",
        "pattern": r"\b(python|py)\b",
        "responses": [
            """
Python Learning Path:
Python Basics → Data Structures → OOP → File Handling → NumPy & Pandas → Mini Projects
"""
        ]
    },

    {
        "intent": "ai_ml",
        "pattern": r"\b(ai|artificial intelligence|machine learning|ml)\b",
        "responses": [
            """
AI / Machine Learning Path:
Python → Mathematics → Data Preprocessing → ML Algorithms → Deep Learning → Model Deployment
"""
        ]
    },

    {
        "intent": "web",
        "pattern": r"\b(web|website|frontend|backend|full stack)\b",
        "responses": [
            """
Web Development Path:
HTML & CSS → JavaScript → React → Backend (Node/Django) → Databases → Full-Stack Projects
"""
        ]
    },

    {
        "intent": "data_science",
        "pattern": r"\b(data science|data analyst|analytics)\b",
        "responses": [
            """
Data Science Path:
Python → Statistics → Data Analysis → Data Visualization → Machine Learning → Projects
"""
        ]
    },

    {
        "intent": "mobile",
        "pattern": r"\b(android|mobile|ios|flutter)\b",
        "responses": [
            """
Mobile App Development Path:
Programming Basics → Android / Flutter → UI/UX Design → APIs & Databases → Testing → App Deployment
"""
        ]
    },

    {
    "intent": "learn_more",
    "pattern": r"\b(learn more|something else|another|recommend again|more)\b",
    "responses": [
        "Sure! What do you want to learn next? (Python / AI / Web / Data Science / Mobile)",
        "No problem! Tell me what you want to learn now.",
        "Alright! What learning path should I create for you?"
        ]
    },

    {
    "intent": "thanks",
    "pattern": r"\b(thank you|thanks|thx|thank u)\b",
    "responses": [
        "You're welcome!",
        "Glad I could help!",
        "Anytime! Let me know if you want another learning path.",
        "Happy learning!"
        ]
    },

    {
        "intent": "exit",
        "pattern": r"\b(exit|bye|quit|goodbye)\b",
        "responses": [
            "Goodbye! Best of luck on your learning journey.",
            "Bye! Keep learning and growing."
        ]
    }
]

fallback_responses = [
    "Sorry, I couldn't understand that.",
    "Please tell me what you want to learn (Python, AI, Web, Data Science).",
    "I can help with learning paths. Try asking about Python or AI."
]

def chatbot_response(user_input):
    for rule in rules:
        if re.search(rule["pattern"], user_input):
            return random.choice(rule["responses"])
    return random.choice(fallback_responses)

print("Learning Path Recommendation Bot")
print("Type 'exit' to quit.\n")

while True:
    user_input = input("You: ").lower()

    response = chatbot_response(user_input)
    print("Bot:", response)

    if re.search(r"\b(exit|bye|quit)\b", user_input):
        break
